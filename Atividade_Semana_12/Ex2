read -p "Digite o nome do arquivo: " arq
for i in $*; do
		case $i in
			a)
				echo "Remover Letras"
				sed -E -e 's/[A-Za-z]//g' $arq
				;;
			b)
				echo "Remover numeros"
				sed -E -e 's/[0-9]//g' $arq
				;;
			c)
				echo "Substituindo Caracteres"
				sed -E -e 's/([[:punct:]])+/<?>/g' $arq
				;;
		esac
done


