for i in $*; do
	case $i in
		'a')
			echo "Diretorios"
			ls -la | grep -E "^[d]"
			echo "";;
		'b')
			echo "Executaveis"
			ls -la | grep -E "^-[rwx]{3}"
			echo "";;
		'c')
			echo "Scriptshell"
			ls -la | grep -E ".*\.sh"
			echo "";;
		'd')
			echo "Links"
			ls -la | grep -E "^[l]"
			echo "";;
  esac
done
