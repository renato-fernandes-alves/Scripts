a=$1
cont=3
if [-f ${a}]; then
	qt=$(wc -l ${a} | cut -c 1)
	cat ${a} | head -${cont} 
  while true; do
		read -p "Aperte Enter para continuar" a
		if [-z ${a}]; then
			cont=$((${cont} + 3))
			cat ${a} | head -${cont}
		if [${cont} -ge ${qt}]; then
			break
		fi
	  fi	
  done
else
	echo "Arquivo n√£o existe"
fi


 
