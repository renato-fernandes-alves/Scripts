#2 
x=10
y=20
z=30

for i in $(seq 1 3); do
  if [-N $x]; then
    read -p "Digite um numero" x
  elif [-N $y]; then
    read -p "Digite um numero" y
  else [-N $z]; then
    read -p "Digite um numero" z
echo ($x+$y+$z)
  

